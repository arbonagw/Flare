material PostProcess/SSAO
{
    technique
    {
        pass
        {
			cull_hardware none
			cull_software none
			depth_func always_pass
			
			vertex_program_ref VS_UVMap
			{
				param_named_auto projection		worldviewproj_matrix
			}

            fragment_program_ref PS_SSAO
            {
            {
                param_named_auto cViewportSize viewport_size
                param_named_auto farClipDistance far_clip_distance
                param_named_auto nearClipDistance near_clip_distance
                param_named_auto cFov fov
				
                param_named cSampleLengthScreenSpace float 1.8
				param_named cOffsetScale float 0.001
				param_named cDefaultAccessibility float 0.0
				param_named cEdgeHighlight float 2.5
            }

            texture_unit
            {
				content_type compositor DeferredShading/GBuffer mrt_output 1
                tex_address_mode clamp
                filtering none
            }
            
            texture_unit
            {
                texture regularSphereJittered4.png
                tex_address_mode wrap
                filtering none
            }
        }
    }
}

material PostProcess/Blur
{
	technique main
	{
		pass main
		{			
			vertex_program_ref VS_UVMap
			{
				param_named_auto projection		worldviewproj_matrix
			}
 
			fragment_program_ref PS_Blur
			{
			}
 
			texture_unit scene
			{
				tex_coord_set 0
				tex_address_mode clamp
                filtering none
			}
 
			texture_unit input
			{
				tex_coord_set 0
				tex_address_mode clamp
                filtering none
			}
		}
	}
}

