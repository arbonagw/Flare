material PostProcess/BoxFilter
{
	technique main
	{
		pass main
		{			
			depth_check off
			vertex_program_ref VS_UVMap
			{
				param_named_auto projection		worldviewproj_matrix
			}

			fragment_program_ref PS_BoxFilter
			{
				param_named_auto size			viewport_size
			}

			texture_unit input
			{
				tex_address_mode clamp
                filtering none
			}
		}
	}
}
