// Particle material
material Particle
{
	technique void
	{
		pass void
		{
			colour_write off
			depth_write off
		}
	}

	technique main
	{
		scheme glow
		pass main
		{
			lighting off
			depth_bias 10
			depth_write off
			scene_blend alpha_blend

			texture_unit
			{
				texture_alias emissiveMap
				texture black.png
				tex_address_mode clamp
			}
		}
	}
}
